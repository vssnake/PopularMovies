<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="@string/pref_title_number_columns_portrait_key"
        android:title="@string/pref_title_number_columns_portrait"
        android:defaultValue="2"
        android:entries="@array/pref_number_columns_portrait_values"
        android:entryValues="@array/pref_number_columns_portrait_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="@string/pref_title_number_columns_landscape_key"
        android:title="@string/pref_title_number_columns_landscape"
        android:defaultValue="3"
        android:entries="@array/pref_number_columns_landscape_values"
        android:entryValues="@array/pref_number_columns_landscape_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <ListPreference
        android:key="@string/pref_title_type_search_key"
        android:title="@string/pref_title_type_search"
        android:defaultValue="0"
        android:entries="@array/pref_type_search_titles"
        android:entryValues="@array/pref_type_search_values"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

</PreferenceScreen>
